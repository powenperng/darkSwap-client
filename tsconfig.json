{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2020",
      "sourceMap": true,
      "outDir": "./dist",
      // "baseUrl": "./",
      "incremental": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*", "config.yaml"],
    "exclude": ["node_modules", "dist"]
  }